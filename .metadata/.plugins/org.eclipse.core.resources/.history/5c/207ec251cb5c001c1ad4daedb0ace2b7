#include<stdio.h>
#define arrSize 50
int main() {
	char inputStr[arrSize], upperCase[arrSize], cryptoed[arrSize];
	printf("Sifrelenecek karakter dizisini girin: ");
	fflush(stdout);
	gets(inputStr);
	printf("\nSifrelenecek karakter dizisi: " + inputStr);
	toUpper(inputStr, upperCase);
	printf("\nBuyuk harfe cevrilmis dizi : " + upperCase);
	return 0;
}

void toUpper(char src[], char dest[]) {
	//Kucuk hafler: 97,122
	//Buyuk harfler: 65,90
	for (int i = 0; i < arrSize; i++) {
		dest[i] = src[i];
		if (src[i] >= 97 && src[i] <= 122) {
			dest[i] -= 32;
		}
	}
	return;

}

char findMax(char *s) {
	char max=0;
	for (int i = 0; i < arrSize; i++) {
		if ( ( (s[i] > 97 && s[i] < 122) || (s[i]<90 && s[i]>65) ) ) {
			if(s[i]>max){
				max = s[i];
			}
		}
	}
	return max;
}

char findMin(char *s) {
	char min=0;
	for (int i = 0; i < arrSize; i++) {
		if ( ( (s[i] > 97 && s[i] < 122) || (s[i]<90 && s[i]>65) ) ) {
			if(s[i]<min){
				min = s[i];
			}
		}
	}
	return min;
}
