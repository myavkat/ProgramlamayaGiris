#include<stdio.h>
#define arrSize 50

void toUpper(char src[], char dest[]);
char findMax(char *s);
char findMin(char *s);
int main() {

	char inputStr[arrSize], upperCase[arrSize], cryptoed[arrSize],
			maxLetterOfInput, minLetterOfInput;

	printf("Sifrelenecek karakter dizisini girin: ");
	fflush(stdout);
	fgets(inputStr, arrSize, stdin);
	printf("\nSifrelenecek karakter dizisi: %s", inputStr);

	toUpper(inputStr, upperCase);
	printf("\nBuyuk harfe cevrilmis dizi : %s", upperCase);

	maxLetterOfInput = findMax(inputStr);
	minLetterOfInput = findMin(inputStr);
	printf("Max degerli karakter : %c (%d)", maxLetterOfInput,
			maxLetterOfInput);
	printf("Min degerli karakter : %c (%d)", minLetterOfInput,
			minLetterOfInput);
	int passwordKey=maxLetterOfInput-minLetterOfInput;
	printf("Sifre anahtari: %d", passwordKey);
	return 0;
}

void toUpper(char src[], char dest[]) {
	//Kucuk hafler: 97,122
	//Buyuk harfler: 65,90
	for (int i = 0; i < arrSize; i++) {
		dest[i] = src[i];
		if (src[i] >= 97 && src[i] <= 122) {
			dest[i] -= 32;
		}
	}
	return;

}

char findMax(char *s) {
	char max = 0;
	for (int i = 0; i < arrSize; i++) {
		if (((s[i] > 97 && s[i] < 122) || (s[i] < 90 && s[i] > 65))) {
			if (s[i] > max) {
				max = s[i];
			}
		}
	}
	return max;
}

char findMin(char *s) {
	char min = 0;
	for (int i = 0; i < arrSize; i++) {
		if (((s[i] > 97 && s[i] < 122) || (s[i] < 90 && s[i] > 65))) {
			if (s[i] < min) {
				min = s[i];
			}
		}
	}
	return min;
}
