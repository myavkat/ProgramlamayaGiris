#include<stdio.h>
#include<ctype.h>
#include<string.h>

void strToUpper(char *src, char *dest);
void strToLower(char *src, char *dest);
void strToSentenceCase(char *src, char *dest);

int main(int argc, char *argv[]) {
	if (argc < 3) {
		printf("Eksik arguman girdiniz!");
	} else if (argc >= 3) {
		if (argc > 3) {
			printf(
					"Fazla arguman girdiniz ama olsun, hizmet icin buradayýz...\n");
		}
		char inputStr[strlen(argv[2])];
		char optionParam[strlen(argv[1])];
		strcpy(inputStr, argv[2]);
		strcpy(optionParam, argv[1]);

		if (!strcmp(optionParam, "-d")) {
			printf("Girdiginiz karakter dizisi: ");
		} else if (!strcmp(optionParam, "-u")) {
			char upperCased[strlen(argv[2])];
			strToUpper(inputStr);
		} else if (!strcmp(optionParam, "-l")) {
			char lowerCased[strlen(argv[2])];
			strToLower(inputStr);
		} else if (!strcmp(optionParam, "-s")) {
			char sentenceCased[strlen(argv[2])];
			strToSentenceCase(inputStr);
		} else {
			printf("Oyle bir opsiyon yok canim. Bye!");
			return 1;
		}
		printf(inputStr);
	}
	return 0;
}

void strToUpper(char *src, char *dest) {
	for (int i = 0; i < strlen(src); i++) {
		dest[i] = toupper(src[i]);
	}
	return;
}

void strToLower(char *src, char *dest) {
	for (int i = 0; i < strlen(src); i++) {
		dest[i] = tolower(src[i]);
	}
	return;
}

void strToSentenceCase(char *src, char *dest) {
	strToLower(src, dest);
	dest[0] = toupper(src[0]);
	return;
}
